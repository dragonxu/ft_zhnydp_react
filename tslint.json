{
    "defaultSeverity": "error",
    "extends": [
        "tslint:recommended"
    ],
    "jsRules": {},
    "rules": {
        "function-constructor": true,
        "class-name": true,
        "encoding": true,
        "interface-name": [true, "always-prefix"],
        "no-duplicate-imports":true,
        "no-console": [
            true,
            ""
        ],
        "no-namespace": [
            true,
            "allow-declarations"
        ],
        "space-before-function-paren": [
            true,
            "never"
        ],
        "indent": [
            true,
            "spaces",
            4
        ],
        "max-line-length": false,
        "object-literal-sort-keys": false
    },
    "rulesDirectory": [
        "src"
    ],
    "linterOptions": {
        "exclude": [
            "node_modules",
            "**/node_modules",
            "/node_modules"
        ]
    }
}